{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "prisma/**",
          "public/**",
          "node_modules/.prisma/**",
          "node_modules/@prisma/client/**",
          "node_modules/prisma/**"
        ],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "npm run vercel-build"
}